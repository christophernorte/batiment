<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Norte\Batiment\CoreBundle\Beans\Entity\Commentaire" table="Commentaire">
    <indexes>
      <index name="idPhoto" columns="idPhoto"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="text" type="text" column="text" nullable="false"/>
    <field name="date" type="datetime" column="date" nullable="false"/>
    <field name="isaffiche" type="boolean" column="isaffiche" nullable="false"/>
    <many-to-one field="idphoto" target-entity="Photo" inversed-by="userCommentaire">
      <join-columns>
        <join-column name="idPhoto" referenced-column-name="id" />
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
