{% extends '::adminBase.html.twig' %}

{% block body -%}
    <h1>Liste des rubriques</h1>

    <table class="adminTab">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Lieu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('secured_rubrique_show', { 'id': entity.id }) }}">{{ entity.nom }}</a></td>
                <td>{{ entity.adresse }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('secured_rubrique_show', { 'id': entity.id }) }}">Détails</a>
                    </li>
                    <li>
                        <a href="{{ path('secured_rubrique_edit', { 'id': entity.id }) }}">Modifier</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('secured_rubrique_new') }}">
                Créer une nouvelle rubrique
            </a>
        </li>
    </ul>
    {% endblock %}
